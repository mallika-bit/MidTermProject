@model InstituteOfComputers.ViewModels.StudentViewModel
@{
    ViewBag.Title = "NewStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{ if (Model.Student.Id == 0 || Model.Student.Id == null)
    {
        <h2>   New Student Form   </h2>
    }
    else
    {
        <h2>Edit Student Form</h2>
    }
}

@using (Html.BeginForm("Save", "Student"))
{

    @Html.ValidationSummary(true, "Please fix the following errors", new { @class = "alert alert-danger" })


    <div class="form-group">
        @Html.LabelFor(m => m.Student.FirstName)
        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.FirstName)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.LastName)
        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.DateOfBirth)
        @Html.TextBoxFor(m => m.Student.DateOfBirth, "{0:d MM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.EnrolledDate)
        @Html.TextBoxFor(m => m.Student.EnrolledDate, "{0:d MM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.EnrolledDate)

    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Student.CourseId)
        @Html.DropDownListFor(m => m.Student.CourseId, new SelectList(Model.Courses, "Id", "CourseName"), "Select Course", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.CourseId)

    </div>


    <div>
        @Html.HiddenFor(m => m.Student.Id)
        @Html.AntiForgeryToken()
        <div class="form-group">
            <button type="submit" class="btn btn-primary ">Save</button>
        </div>
    </div>
}

@section scripts
{

    @Scripts.Render("~/bundles/jqueryval")

}
